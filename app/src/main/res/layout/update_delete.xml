<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textJenisaja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"/>

    <EditText
        android:id="@+id/editJenis"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:gravity="start|center"
        android:hint="Judul Baru"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editJudul"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@drawable/edit"
        android:ems="10"
        android:gravity="start|center"
        android:hint="Link Baru"
        android:inputType="textMultiLine" />

    <Spinner
        android:id="@+id/spinnernew"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:entries="@array/Jenis" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:text="Update"
        android:textColor="#4CAF50" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:text="Delete"
        android:textColor="#FF0505" />
    <Button
        android:id="@+id/btnLink"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:text="Go to Website"
        android:textColor="#4CAF50" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:text="Share It"
        android:textColor="#4CAF50" />
</LinearLayout>